
@import "reset.styl";
@import "_partial/icon.styl";

html, body {
  height: 100%;
  width: 100%;
  padding: 0;
  margin: 0;
  font-family: "PingFang SC";
}
body {
  min-height: 100%;
  display: flex;
  flex-direction: column;
  max-width: 1080px;
  margin: auto;
  filter: contrast(200%);
}
nav {
  display: flex;
  min-height: 80px;
  padding: 0 45px;
  color: #000;
  flex-direction: row;
  padding: 30px 180px 0;
}
a {
  text-decoration: none;
  color: inherit;
}
main {
  flex: 1;
}
main::before {
    display: block;
    width: 100%;
    height: 100%;
    content: " ";
    max-width: 1080px;
    position: absolute;
    z-index: -1;
    opacity: .1;
    background-image: url("../imgs/bg_yourname.jpg");
    background-repeat: no-repeat;
    background-size: contain;
    background-position: 0 100px;  
  }
.logo {
  flex: 1;
  margin-right: auto;
  img.logo_img {
    width: 40px;
    height 40px;
    margin-right: 15px;
  }
  a {
    text-transform: uppercase;
  }
}
.nav-item {
  margin-right: 40px;
  display: flex;
  align-items: center;
  font-size: 18px;
  font-weight: 700;
  filter: grayscale(200%) drop-shadow(8px 8px 10px #999);
}
.nav-item:last-child {
  margin-right: 0;
}
.nav-item:not(.logo) > a:after {
  content: " ";
  height: 2px;
  width: 0;
  background: #000;
  display: block;
  transition: all .3s;
  margin: auto;
}
.nav-item > a:hover:after{
  width: 100%;
}
.wrapper {
  flex: 1;
  padding: 50px 180px;
}

.footer {
  text-align: center;
  padding: 25px 0;
  color: #999;
  a {
    color: #000;
  }
}
// Article
article {
  margin-top: 50px;  
}

article .article-title {
  color: #000;
  text-align: center;
}

article .article-top-meta {
  text-align: center;
}

article .article-footer {
  display: flex;
  flex-direction: row;
  margin-top: 20px;
}

.article-footer .pull-left {
  flex-grow: 1;
}

.post-categories, .post-tag {
  i {
    vertical-align: middle;
  }
  a {
    cursor: inherit;
  }
}

.driver {
  height: 2px;
  width: 50%;
  background: #f7f7f7;
  margin: 50px auto;
}

nav.pagination {
  display: flex;
  margin: auto;
  flex-direction: row;
  justify-content: center;
  filter: grayscale(200%) drop-shadow(8px 8px 10px #999);
}
nav.pagination .pagination-item {
  width: 30px;
  height: 30px;
  text-align: center;
  font-size: 18px;
  line-height: 30px;
  margin-right: 15px;
  border-radius: 50%;
}

.pagination-prev,.pagination-item:last-child {
  margin-right: 0;
}

nav.pagination .active {
  background: #000;
  color: #fff;
  margin: 0 15px;
}

.pagination-prev,.pagination-next {
  color: #000;
  font-size: 18px;
  text-transform: uppercase;
  line-height: 30px;
}

.pagination-prev  {
  margin-right: 25px
}

.pagination-next {
  margin-left: 25px;
}

.post {
  max-width: 770px;
  margin: auto;
}
// timeline
.timeline-title {
  text-align: center;
  color: #999;
}

.line-item {
  padding-left: 440px;
}

.timeline {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.line-date {
  font-size: 17px;
  font-weight: 500;
  width: 70px;
}
.line-dot {
  width: 20px;
  height: 20px;
  background: #999;
  border-radius: 50%;
}
.line-title {
  margin-left: 40px;
}
.line-h {
  height: 50px;
  width: 2px;
  background: #000;
  position: relative;
  transform: translate3d(79px, 0, 0);
}
.current-year {
  font-size: 25px;
  font-weight: 700;
}
.current-dot {
  background: #000;
}

//About
.about-title {
  text-align: center;
  color:#999;
}
.intro {
  text-align: center;
  color: #000;
  font-size: 20px;
  filter: grayscale(200%);
}